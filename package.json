  "version": "0.1.0",
  "license": "GPL-3.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DBCDK/content-first.git"
  },
  "author": "DBCDK",
  "bugs": {
    "url": "https://github.com/DBCDK/content-first/issues"
  },
  "devDependencies": {
    "chai": "^4.0.2",
    "eslint": "^4.4.1",
    "eslint-plugin-react": "^7.3.0",
    "mocha": "^3.4.2",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "nsrun": "^1.1.2",
    "react-scripts": "1.0.7",
    "sinon": "^3.1.0",
    "supertest": "^3.0.0"
  },
  "dependencies": {
    "body-parser": "^1.17.2",
    "express": "^4.15.3",
    "helmet": "^3.6.1",
    "knex": "^0.13.0",
    "pg": "^7.1.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.0.12",
    "redux": "^3.7.2",
    "stdio": "^0.2.7"
  },
  "proxy": "http://localhost:3001",
  "scripts": {
    "build": "react-scripts build",
    "lint-js": "eslint --format unix src",
    "postinstall": "./setup-node-env.sh",
    "start": "run-p start-backend start-frontend",
    "start-backend": ". ./current.env && nodemon --exec node --no-stdin src/server/main.js --watch src/server",
    "start-backend-once": ". ./current.env && node src/server/main.js || true",
    "start-frontend": "react-scripts start",
    "test": "run-s lint-js test-units",
    "test-frontend": "react-scripts test --env=jsdom",
    "test-full": "run-p start-backend-once test-integration-delayed",
    "test-integration": ". ./current.env && mocha src/integration/**/*_test.js",
    "test-integration-delayed": "sleep 3 && nsrun test-integration && ./kill-running-server.sh",
    "test-units": "mocha src/lib/**/*_test.js"
  }
}
